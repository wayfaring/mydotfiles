LS_OPTIONS="-F --color=always --show-control-chars"

alias ls='ls $LS_OPTIONS'
alias lsd='ls -d */'

# commands with specific options
alias rm='rm'
alias grep='grep -i -n -R --color'
alias cp='cp -i'
alias mv='mv -i'
alias screen='screen -s /usr/bin/bash'
alias ..='cd ..'
alias gdb='gdb --quiet'
alias cscope='cscope -d'
alias vi='vim'
